<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">
    <persistence-unit name="tkrPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>entity.Author</class>
        <class>entity.Student</class>
        <class>entity.Book</class>
        <class>entity.PrintedBook</class>
        <class>entity.EBook</class>
        <class>entity.Biography</class>
        <class>entity.BorrowedBook</class>
        <properties>
            <!-- Updated properties for Jakarta Persistence -->
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://localhost:3306/finance"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="kurasql"/>
            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>